generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
  output        = "../clients/mongodb"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_CONNECTION_STRING")
}

type UserInfo {
  hostInfo   HostInfo?
  username   String
  role       String?
  vendorInfo VendorInfo?
  staffInfo  StaffInfo?
}

type HostInfo {
  hostId     String
  hostName   String
  expiretime DateTime
}

type StaffInfo {
  staffId   String
  vendorId  String
  staffName String
}

type VendorInfo {
  vendorName String
  vendorId   String
  urlQr      String
}

model SessionData {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  accessToken String   @unique
  createdAt   Int
  expiredAt   Int
  sessionId   String
  updatedAt   Int
  userInfo    UserInfo
}

